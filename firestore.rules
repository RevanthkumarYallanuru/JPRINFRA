rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    // Helper function to check if user is manager or admin
    function isManager() {
      return isAuthenticated() && (getUserRole() == 'admin' || getUserRole() == 'manager');
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Users can create their own profile (for first-time signup)
      allow create: if isAuthenticated() 
        && request.auth.uid == userId
        && request.resource.data.uid == userId
        && request.resource.data.email == request.auth.token.email;
      // Users can update their own profile (limited fields)
      allow update: if isAuthenticated() 
        && request.auth.uid == userId
        && request.resource.data.uid == resource.data.uid
        && request.resource.data.email == resource.data.email
        && request.resource.data.role == resource.data.role; // Prevent role changes
      // Only admins can delete users or modify other users
      allow delete: if isAdmin();
      // Admins can update any user (for role management)
      allow update: if isAdmin();
    }
    
    // Projects collection
    match /projects/{projectId} {
      // All authenticated users can read projects
      allow read: if isAuthenticated();
      
      // Only managers and admins can create projects
      allow create: if isManager() 
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.createdAt == request.time
        && request.resource.data.updatedAt == request.time;
      
      // Only managers and admins can update projects
      allow update: if isManager() 
        && request.resource.data.updatedBy == request.auth.uid
        && request.resource.data.updatedAt == request.time
        && request.resource.data.createdBy == resource.data.createdBy
        && request.resource.data.createdAt == resource.data.createdAt;
      
      // Only admins can delete projects
      allow delete: if isAdmin();
      
      // Project tasks subcollection
      match /tasks/{taskId} {
        // All authenticated users can read tasks
        allow read: if isAuthenticated();
        
        // Only managers and admins can create tasks
        allow create: if isManager() 
          && request.resource.data.projectId == projectId
          && request.resource.data.createdBy == request.auth.uid
          && request.resource.data.createdAt == request.time
          && request.resource.data.updatedAt == request.time;
        
        // Only managers and admins can update tasks
        allow update: if isManager() 
          && request.resource.data.updatedAt == request.time
          && request.resource.data.createdBy == resource.data.createdBy
          && request.resource.data.createdAt == resource.data.createdAt
          && request.resource.data.projectId == resource.data.projectId;
        
        // Only managers and admins can delete tasks
        allow delete: if isManager();
      }
    }
    
    // Contact leads collection (public form submissions)
    match /contactLeads/{leadId} {
      // Anyone can create a contact lead (public form)
      allow create: if true;
      // Only authenticated admins can read contact leads
      allow read: if isAuthenticated();
      // Only admins can delete contact leads
      allow delete: if isAdmin();
    }
    
    // Quotation requests collection (public form submissions)
    match /quotationRequests/{requestId} {
      // Anyone can create a quotation request (public form)
      allow create: if true;
      // Only authenticated admins can read quotation requests
      allow read: if isAuthenticated();
      // Only admins can delete quotation requests
      allow delete: if isAdmin();
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

